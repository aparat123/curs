<Window x:Class="Interface.Changes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface"
        mc:Ignorable="d"
        Title="Changes" Height="200" Width="250">
    <Grid>
        <TextBlock x:Name="text_changes" TextAlignment="Center" HorizontalAlignment="Left" Margin="10,25,0,0" TextWrapping="Wrap" Text="Введіть нове ім'я" VerticalAlignment="Top" Height="28" Width="222" FontSize="18"/>
        <TextBox x:Name="new_changes" HorizontalAlignment="Left" Height="26" Margin="47,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152" FontSize="16"/>
        <Button x:Name="btn_change" Content="Змінити" HorizontalAlignment="Left" Margin="143,128,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btn_back" Content="Назад" HorizontalAlignment="Left" Margin="30,128,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
